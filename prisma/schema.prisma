generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// === NextAuth 필수 테이블 ===

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  phone         String?
  kakaoId       String?
  telegramId    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  bookings Booking[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// === 비즈니스 모델 ===

model GolfCourse {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  nameKo      String
  holes       Int      @default(18)
  par         Int      @default(72)
  yards       Int?
  courseType   String?
  distance    String?
  designer    String?
  features    Json     @default("[]")
  description String?  @db.Text
  images      Json     @default("[]")
  badge       String?
  badgeColor  String?
  greenFee    String?
  isPublished Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings Booking[]
}

model Resort {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  nameKo      String?
  grade       String?
  area        String?
  feature     String?
  features    Json     @default("[]")
  description String?  @db.Text
  images      Json     @default("[]")
  isPublished Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings Booking[]
}

model Activity {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  nameKo      String?
  description String?  @db.Text
  icon        String?
  duration    String?
  price       String?
  features    Json     @default("[]")
  images      Json     @default("[]")
  isPublished Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings Booking[]
}

model Booking {
  id           String        @id @default(cuid())
  userId       String
  status       BookingStatus @default(INQUIRY)
  serviceType  ServiceType
  golfCourseId String?
  resortId     String?
  activityId   String?
  startDate    DateTime?
  endDate      DateTime?
  guests       Int           @default(1)
  message      String?       @db.Text
  adminNote    String?       @db.Text
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user       User        @relation(fields: [userId], references: [id])
  golfCourse GolfCourse? @relation(fields: [golfCourseId], references: [id])
  resort     Resort?     @relation(fields: [resortId], references: [id])
  activity   Activity?   @relation(fields: [activityId], references: [id])
  quotes     Quote[]

  @@index([userId])
  @@index([status])
}

model Quote {
  id          String   @id @default(cuid())
  bookingId   String
  totalAmount Int
  currency    String   @default("KRW")
  breakdown   Json
  validUntil  DateTime
  note        String?  @db.Text
  createdAt   DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

// === Enums ===

enum Role {
  USER
  ADMIN
}

enum BookingStatus {
  INQUIRY
  QUOTE_SENT
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum ServiceType {
  GOLF
  RESORT
  ACTIVITY
  PACKAGE
  CUSTOM
}
